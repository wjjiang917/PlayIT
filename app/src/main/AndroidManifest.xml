<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pindi.play.it">

    <application
        android:name="com.pindiboy.playit.App"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name="com.pindiboy.playit.ui.activity.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.pindiboy.playit.ui.activity.MainActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.pindiboy.playit.ui.activity.PlayerActivity"
            android:configChanges="orientation|screenSize|keyboardHidden|smallestScreenSize|screenLayout" />
        <activity android:name="com.pindiboy.playit.ui.activity.SearchActivity" />
        <activity android:name="com.pindiboy.playit.ui.activity.ChannelDetailActivity" />
    </application>
</manifest>